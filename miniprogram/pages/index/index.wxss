/* pages/index.wxss */
.wallpaper {
  background-size: cover;
  background-repeat: no-repeat;
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -999;
}

.custom-swiper {
  height: 2300rpx;
}

.main {
  width: 100vw;
  box-sizing: border-box;
  padding: 0 30rpx 30rpx 30rpx;
}

.header {
  display: flex;
  justify-content: space-between;
  width: 100%;
  color: #ffffff;
}

.header-menu {
  position: absolute;
  top: 50rpx;
  right: 30rpx;
  width: 25%;
  background-color: rgba(0, 0, 0, 0.7);
  margin-right: 10rpx;
  padding: 30rpx;
  border-radius: 20rpx;
  color: #ffffff;
  z-index: 999;
}

.header-item {
  line-height: 1.5;
}

.content {
  color: #ffffff;
}

.lives {
  text-align: center;
  line-height: 2.5;
}

.lives .city {
  font-size: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.lives .temp {
  font-size: 150rpx;
  line-height: 1;
}

.lives .sup {
  line-height: 2;
  font-size: 40rpx;
  vertical-align: top;
}

.lives .temp-range {
  font-size: 30rpx;
}

.lives .text {
  font-size: 30rpx;
}

.hour {
  height: 280rpx;
}

.forecast {
  font-size: 25rpx;
  width: 100%;
  height: 320rpx;
}

.air-indices {
  font-size: 25rpx;
  width: 100%;
  height: 300rpx;
}

.aqi {
  font-size: 25rpx;
  width: 100%;
  height: 320rpx;
}

.aqi-progress {
  width: 100px;
  height: 100px;
}
.aqi-progress canvas {
  width: 100px;
  height: 100px;
}


.scroll-container {
  width: 100%;
  white-space: nowrap;
}

.scroll-container .item {
  display: inline-block;
  width: 20%;
  text-align: center;
}

.scroll-container .icon {
  width: 56rpx;
  height: 56rpx;
  margin: 15rpx 0;
}

.scroll-container .icon-sm {
  width: 48rpx;
  height: 48rpx;
}

.scroll-container .item-content {
  font-size: 25rpx;
  line-height: 1.5;
}

.sun {
  width: 100%;
  height: 530rpx;
  font-size: 25rpx;
}

.sun-canvas {
  width: auto;
  /* text-align: center; */
  display: flex;
  justify-content: center;
}
.sun-canvas canvas {
  width: 600rpx;
  height: 300rpx;
}

.title {
  font-size: 25rpx;
  margin-bottom: 20rpx;
}