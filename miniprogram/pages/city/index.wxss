/* pages/city/index.wxss */
page {
  color: white;
  --td-search-bg-color: rgba(0, 0, 0, 0.2);
  --td-search-icon-color: rgb(255, 255, 255,0.2);
  --td-text-color-placeholder: rgba(255, 255, 255,0.2);
  --td-search-text-color: rgb(255, 255, 255);
}

.main {
  width: 100%;
  box-sizing: border-box;
}

.search {
  margin: 0 30rpx 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 覆盖search的边框设置 */
.t-search__input-box {
  border: none !important;
}

.search .left {
  width: 90%;
  margin-right: 20rpx;
}

.search .right {
  width: 10%;
}

movable-area {
  width: 100%;
  height: 250rpx;
  margin-bottom: 30rpx;
}

movable-view {
  display: flex;
  width: 125%;
  height: 250rpx;
}

.movable-item {
  display: flex;
  width: 125%;
  align-items: center;
}

.content {
  position: relative;
  width: 100%;
  height: 250rpx;
  box-sizing: border-box;
  z-index: -1;
}

.content .background {
  position: absolute;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
  border-radius: 30rpx;
  z-index: -999;
}

.content image {
  width: 100%;
  height: 100%;
  border-radius: 30rpx;
  filter: brightness(0.8);
}

.content .top {
  width: auto;
  padding: 30rpx 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.top .left {
  font-size: 50rpx;
  margin-bottom: 20rpx;
  width: 40%;
}

.top .right {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  width: 40%;
  text-align: right;
}

.content .bottom {
  width: auto;
  padding: 0 100rpx;
  display: flex;
  justify-content: space-between;
}

.bottom .left {
  width: 50%;
}

.bottom .right {
  width: 50%;
  text-align: right;
}

.del-btn {
  width: 25%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 10;
  background-color:rgba(0, 0, 0, 0.2);
  border-radius: 40rpx;
}